<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FragmentEditTickets"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/linear_01"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome: "/>

        <TextView
            android:id="@+id/txt_nama_wisata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Lucas Albuquerque"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_02"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_01">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idade: "/>

        <TextView
            android:id="@+id/txt_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_03"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_02">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail: "/>

        <TextView
            android:id="@+id/txt_pemesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_04"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:layout_below="@+id/linear_03">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Komentar: "/>

        <EditText
            android:id="@+id/edt_comentar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:hint="komentar"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:enabled="false"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:id="@+id/txt_save_comentar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="salvar"
                android:drawablePadding="2dp"
                android:drawableLeft="@drawable/ic_profile"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="cancelar"
                android:drawablePadding="2dp"
                android:drawableLeft="@drawable/ic_profile"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawablePadding="2dp"
                android:drawableLeft="@drawable/ic_profile"
                android:text="editar" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_profile"
        android:layout_below="@+id/linear_04"/>
</RelativeLayout>
