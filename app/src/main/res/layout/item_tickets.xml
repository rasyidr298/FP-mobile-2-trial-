<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rel01"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="30dp">

                <com.vipulasri.ticketview.TicketView
                    android:background="@color/blue"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:ticketOrientation="horizontal"
                    app:ticketElevation="12dp"
                    app:ticketScallopRadius="10dp"
                    app:ticketDividerPadding="0dp"
                    app:ticketShowBorder="false"
                    app:ticketScallopPositionPercent="62"
                    app:ticketShowDivider="true"
                    app:ticketDividerType="dash"/>

                <ImageView
                    android:id="@+id/img_scan"
                    android:layout_marginTop="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:background="@drawable/qrcode"/>


                <TextView
                    android:layout_below="@+id/img_scan"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:text="D-0024"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                    <TextView
                        android:layout_marginTop="255dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/txt_nama_wisata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wisata Prambanan"
                        android:layout_marginLeft="5dp"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/lay03"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="290dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_pemesan"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Dwi Rahmawati"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txt_nik"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="33098682629262926"
                        android:textStyle="bold"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_below="@+id/lay03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_jumlah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="4"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txt_kategori_umur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Dewasa"
                        android:textStyle="bold"/>


                </LinearLayout>


                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/txt_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="45.000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>


                <TextView
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/txt_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="13 Agustus 2019"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_profile"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp"
                android:layout_alignParentLeft="true"
                android:text="details"
                android:gravity="center_vertical"
                android:visibility="invisible"/>

        </RelativeLayout>
</RelativeLayout>